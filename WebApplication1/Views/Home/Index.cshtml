@{
    ViewBag.Title = Resources.HomeWelcomeTitle;
    var culture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name.ToLowerInvariant();
}
@helper selected(string c, string culture)
{
    if (c == culture)
    {
        @:checked="checked"
    }
}
@using (Html.BeginForm("SetCulture", "Home"))
{
    <fieldset style="width: fit-content; margin-left: auto;">
        <div class="control-group row">
            <div class="controls">
                <label for="en-us">
                    <input name="culture" id="en-us" value="en-us" type="radio" @selected("en-us", culture) /> English
                </label>
            </div>
        </div>
        <div class="control-group row">
            <div class="controls" >
                <label for="pl">
                    <input name="culture" id="pl" value="pl" type="radio" @selected("pl", culture) /> Polski
                </label>
            </div>
        </div>
    </fieldset>
}

<main>
    <section class="row" aria-labelledby="aspnetTitle">
        <h1 id="title">@Resources.HomeWelcomeTitle</h1>
    </section>
    <div class="row">
        <p>
            @Resources.HomeWelcomeDescription
        </p>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        (function ($) {
            $("input[type = 'radio']").click(function () {
                $(this).parents("form").submit(); // post form
            });
        })(jQuery);
    </script>
}